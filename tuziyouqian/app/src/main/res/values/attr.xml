<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleHeaderBar">
        <attr name="title_bgColor" format="reference|color" />
        <attr name="show_divider" format="boolean" />
        <attr name="title_text" format="string" />
    </declare-styleable>
    <declare-styleable name="person_item">
        <attr name="item_icon" format="reference" />
        <attr name="item_title" format="string" />
        <attr name="item_titleColor" format="reference|color" />
        <attr name="item_content" format="string" />
        <attr name="item_contentColor" format="reference|color" />
        <attr name="show_line" format="boolean" />
        <attr name="show_icon" format="boolean" />
    </declare-styleable>
    <declare-styleable name="MyClearEditText">
        <attr name="clear_icon" format="reference" />
        <!--清除按钮的图标  可以为空  有默认的-->
        <attr name="ishow_clear_icon" format="boolean" />
        <!--是否显示清除图标的按钮-->
        <attr name="focustextcolor" format="reference|color" />
        <attr name="normaltextcolor" format="reference|color" />
        <attr name="clear_icon_marginright" format="dimension" />
        <!-- 清除图标的marginright-->
        <attr name="clear_icon_isalwaysshow" format="boolean" />
        <!-- 清除图标显示的状态   true是一直都显示   false是只有在输入内容的时候才显示-->
    </declare-styleable>
    <declare-styleable name="common_item">
        <attr name="common_title" format="string" />
        <attr name="common_titleColor" format="reference|color" />
        <attr name="common_content" format="string" />
        <attr name="common_contentColor" format="reference|color" />
        <attr name="common_show_line" format="boolean" />
        <attr name="common_show_arrow" format="boolean" />
    </declare-styleable>

    <!--线颜色-->
    <attr name="max_line_color" format="color" />
    <attr name="mid_line_color" format="color" />
    <attr name="min_line_color" format="color" />

    <attr name="max_line_count" format="integer" />
    <attr name="mid_line_count" format="integer" />

    <attr name="text_size" format="dimension" />

    <attr name="text_color" format="color" />
    <!--线的宽度-->
    <attr name="line_width" format="dimension" />
    <!--线的颜色-->
    <attr name="line_space" format="dimension" />

    <!--指示器颜色-->
    <attr name="indicator_color" format="color" />

    <!--指示器宽度-->
    <attr name="indicator_size" format="dimension" />


    <!--基线颜色-->
    <attr name="base_line_color" format="color" />

    <!--基线高度 就是多粗-->
    <attr name="base_line_height" format="dimension" />

    <!--是否显示基线-->
    <attr name="show_base_line" format="boolean" />

    <!--文字位置-->
    <attr name="text_gravity" format="enum">
        <enum name="top" value="0" />
        <enum name="bottom" value="1" />
    </attr>

    <!--基线位置-->
    <attr name="base_line_gravity" format="enum">
        <enum name="top" value="0" />
        <enum name="center" value="1" />
        <enum name="bottom" value="2" />
    </attr>
    <!--刻度 对齐方式-->
    <attr name="line_gravity" format="enum">
        <enum name="top" value="0" />
        <enum name="center" value="1" />
        <enum name="bottom" value="2" />
    </attr>

    <declare-styleable name="RulerView">
        <!--线颜色-->
        <attr name="max_line_color" />
        <attr name="mid_line_color" />
        <attr name="min_line_color" />

        <attr name="text_size" />

        <attr name="text_color" />
        <!--线的宽度-->
        <attr name="line_width" />
        <!--线的颜色-->
        <attr name="line_space" />

        <attr name="indicator_color" />

        <attr name="indicator_size" />


        <attr name="base_line_color" />

        <attr name="base_line_gravity" />

        <attr name="line_gravity" />

        <attr name="show_base_line" />

        <attr name="text_gravity" />

        <attr name="base_line_height" />

        <attr name="max_line_count" />

        <attr name="mid_line_count" />


    </declare-styleable>
    <declare-styleable name="IconItem">
        <attr name="IconItem_icon" format="reference" />
        <attr name="IconItem_title" format="string" />
    </declare-styleable>
</resources>