<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_solid_white_corners_20"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_40.0PX"
        android:layout_marginRight="@dimen/DIMEN_40.0PX"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/DIMEN_60.0PX"
            android:gravity="left"
            android:includeFontPadding="false"
            android:text="更新内容"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/DIMEN_32.0PX" />

        <TextView
            android:id="@+id/mContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/DIMEN_30.0PX"
            android:gravity="left|center"
            android:includeFontPadding="false"
            android:text="内容"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/DIMEN_30.0PX" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/DIMEN_30.0PX"
        android:background="@color/color_ededed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_86.0PX"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="取消"
            android:includeFontPadding="false"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/DIMEN_32.0PX" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_ededed" />

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="立即更新"
            android:includeFontPadding="false"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/DIMEN_32.0PX" />
    </LinearLayout>

</LinearLayout>