<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_solid_white_corners_10"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_40.0PX"
        android:includeFontPadding="false"
        android:text="请输入图形验证码"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/DIMEN_32.0PX" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_96.0PX"
        android:layout_marginLeft="@dimen/DIMEN_40.0PX"
        android:layout_marginRight="@dimen/DIMEN_40.0PX"
        android:layout_marginTop="@dimen/DIMEN_42.0PX"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivGraph"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_96.0PX"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_20.0PX"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.mod.jishidai.widget.ClearEditText
                android:id="@+id/etCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_95.0PX"
                android:background="@color/white"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@color/color_333333"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textSize="@dimen/DIMEN_35.0PX" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_ededed" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_88.0PX"
        android:layout_marginBottom="@dimen/DIMEN_40.0PX"
        android:layout_marginLeft="@dimen/DIMEN_60.0PX"
        android:layout_marginRight="@dimen/DIMEN_60.0PX"
        android:layout_marginTop="@dimen/DIMEN_44.0PX"
        android:background="@drawable/radius_style_button"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="确定"
        android:textColor="@color/color_text_primary" />

</LinearLayout>