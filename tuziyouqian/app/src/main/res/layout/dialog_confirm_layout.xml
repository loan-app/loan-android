<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_solid_white_corners_20"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/DIMEN_40.0PX"
        android:layout_marginRight="@dimen/DIMEN_40.0PX"
        android:layout_marginTop="@dimen/DIMEN_50.0PX"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="请核对个人信息"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/DIMEN_32.0PX" />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_66.0PX"
        android:layout_marginRight="@dimen/DIMEN_40.0PX"
        android:layout_marginTop="@dimen/DIMEN_50.0PX"
        android:gravity="left"
        android:lineSpacingMultiplier="1.5"
        android:includeFontPadding="false"
        android:text="更新内容"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/DIMEN_30.0PX" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_40.0PX"
        android:layout_gravity="center_horizontal"
        android:includeFontPadding="false"
        android:text="确认后无法修改，请务必核实正确！"
        android:textColor="@color/color_ea3333"
        android:textSize="@dimen/DIMEN_32.0PX" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/DIMEN_50.0PX"
        android:background="@color/color_ededed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_86.0PX"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="取消"
            android:includeFontPadding="false"
            android:textColor="@color/color_5182e4"
            android:textSize="@dimen/DIMEN_32.0PX" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_ededed" />

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="确定"
            android:includeFontPadding="false"
            android:textColor="@color/color_5182e4"
            android:textSize="@dimen/DIMEN_32.0PX" />
    </LinearLayout>

</LinearLayout>