<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.google.android.cameraview.CameraView
        android:id="@+id/mCamera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:keepScreenOn="true"
        app:autoFocus="true"
        app:facing="front" />

    <ImageView
        android:id="@+id/iv_takePhoto"
        android:layout_width="@dimen/DIMEN_150.0PX"
        android:layout_height="@dimen/DIMEN_150.0PX"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/DIMEN_90.0PX"
        android:background="@mipmap/ic_capture_btn" />

    <!--    </LinearLayout>-->
</RelativeLayout>