<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@android:id/background">
		<shape>
			<corners android:radius="1.0dip" />
			<gradient
				android:startColor="@color/color_cbcbcb"
				android:endColor="@color/color_cbcbcb"
				android:angle="270.0"
				android:centerY="0.75"
				android:centerColor="@color/color_cbcbcb" />
		</shape>
	</item>

	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<corners android:radius="1.0dip" />
				<gradient
					android:startColor="@color/color_fc5641"
					android:endColor="@color/color_fc5641"
					android:angle="270.0" />
			</shape>
		</clip>
	</item>
</layer-list>